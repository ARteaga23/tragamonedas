<script>
let puntos = 100;
let simbolos = ["ğŸ’","ğŸ‹","â­","ğŸ””"];

function girar() {
  if (puntos < 10) {
    alert("No tienes puntos");
    return;
  }

  puntos -= 10;

  let a = simbolos[Math.floor(Math.random()*4)];
  let b = simbolos[Math.floor(Math.random()*4)];
  let c = simbolos[Math.floor(Math.random()*4)];

  document.getElementById("s1").innerText = a;
  document.getElementById("s2").innerText = b;
  document.getElementById("s3").innerText = c;

  if (a === b && b === c) {
    puntos += 50;
    alert("ğŸ‰ GANASTE 50 puntos");
  }

  document.getElementById("puntos").innerText = "Puntos: " + puntos;
}
